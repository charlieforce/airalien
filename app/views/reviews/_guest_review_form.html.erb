<%= form_for([@room, @room.reviews.new]) do |f| %>

	<div class="user_stars"></div>

	<div class="form-group">
		<%= f.text_area :comment, rows: 1, class: "form-control" %>
	</div>
    <%= f.hidden_field :user_id , value: locals[:user_id] %>
  <%= f.hidden_field :review_type , value: "guest review" %>
	<%= f.hidden_field :room_id, value: @room.id %>

	<div class="actions">
		<%= f.submit "Rate Guest", class: "btn btn-primary" %>
	</div>

<% end %>

<script>
	$('.user_stars').raty({
		path: '/assets',
		scoreName: 'review[star]',
		score: 1
	});
</script>
